[Unit]
Description=Kubernetes Kubelet
Documentation=https://kubernetes.io/docs/home/
After=containerd.service
Requires=containerd.service

[Service]
ExecStart=/usr/local/bin/kubelet --config=/var/lib/kubelet/kubelet-config.yaml --kubeconfig=/var/lib/kubelet/worker1.kubeconfig --register-node=true --tls-cert-file=/var/lib/kubelet/worker1.crt --tls-private-key-file=/var/lib/kubelet/worker1.key --v=2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target